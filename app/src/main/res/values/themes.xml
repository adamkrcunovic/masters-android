<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FlightSearch" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/app_blue</item>
        <item name="colorError">@color/red</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="Theme.FlightSearch.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="rippleColor">@color/app_blue_20</item>
        <item name="cornerRadius">7dp</item>
        <item name="textAllCaps">false</item>
        <item name="singleLine">true</item>
        <item name="backgroundTint">@color/app_blue</item>
    </style>

    <style name="Theme.FlightSearch.Button.Outline.Oval" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="rippleColor">@color/app_blue_20</item>
        <item name="strokeColor">@color/app_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">7dp</item>
        <item name="textAllCaps">false</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Theme.FlightSearch.Button.Outline.Oval.WhiteBackground" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="rippleColor">@color/app_blue_20</item>
        <item name="strokeColor">@color/app_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">7dp</item>
        <item name="textAllCaps">false</item>
        <item name="singleLine">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.FlightSearch.Text.ClickableBlue" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="rippleColor">@color/app_grey</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Theme.FlightSearch.Text.ClickableGrey" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/app_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="rippleColor">@color/app_grey</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

</resources>