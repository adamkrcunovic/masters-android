<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.SearchFragment"
    android:background="@color/app_blue_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:strokeColor="@color/black"
            app:strokeWidth="0.5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottom_sheet_appbar_color"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Start searching flight deals!"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="4dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_buttonExactDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_title"
                        app:layout_constraintEnd_toStartOf="@id/constraintLayout_buttonMonth"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        >

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_exactDatesActive"
                            style="@style/Theme.FlightSearch.Button.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Exact Date"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="12sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_exactDatesInActive"
                            style="@style/Theme.FlightSearch.Button.Outline.Oval.WhiteBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Exact Date"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"
                            android:textSize="12sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_buttonMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/constraintLayout_buttonExactDate"
                        app:layout_constraintTop_toBottomOf="@id/textView_title"
                        app:layout_constraintEnd_toStartOf="@id/constraintLayout_buttonPublicHoliday"
                        android:layout_marginHorizontal="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_monthActive"
                            style="@style/Theme.FlightSearch.Button.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Month"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"
                            android:textSize="12sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_monthInActive"
                            style="@style/Theme.FlightSearch.Button.Outline.Oval.WhiteBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Month"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="12sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_buttonPublicHoliday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/constraintLayout_buttonMonth"
                        app:layout_constraintTop_toBottomOf="@id/textView_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_publicHolidayActive"
                            style="@style/Theme.FlightSearch.Button.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Days Off"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone"
                            android:textSize="12sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_publicHolidayInActive"
                            style="@style/Theme.FlightSearch.Button.Outline.Oval.WhiteBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Days Off"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="12sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout_buttonExactDate"
                        android:layout_marginTop="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView_adults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Adults:"
                    android:textColor="@color/black_80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"/>

                <ImageView
                    android:id="@+id/imageView_remove"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_remove"
                    app:tint="@color/app_blue"
                    app:layout_constraintEnd_toStartOf="@id/textView_adultsNumber"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_title"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView_adultsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="1"
                    android:textColor="@color/black_80"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_title"
                    app:layout_constraintEnd_toStartOf="@id/imageView_add"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"/>

                <ImageView
                    android:id="@+id/imageView_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/app_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_title"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_adults"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/textView_trip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Trip:"
                    android:textColor="@color/black_80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/textView_addMulticity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Add MultiCity"
                    android:textColor="@color/black_80"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="16dp"
                    android:drawableEnd="@drawable/ic_add"
                    android:drawableTint="@color/app_blue"
                    android:drawablePadding="4dp"
                    android:gravity="center"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_from1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/textView_trip1"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toStartOf="@id/imageView1"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_from1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/search_from"
                        android:inputType="textPersonName|textCapSentences"
                        android:singleLine="true">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forward"
                    app:tint="@color/app_blue"
                    app:layout_constraintTop_toTopOf="@id/textInputLayout_from1"
                    app:layout_constraintBottom_toBottomOf="@id/textInputLayout_from1"
                    app:layout_constraintStart_toEndOf="@id/textInputLayout_from1"
                    app:layout_constraintEnd_toStartOf="@id/textInputLayout_to1"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_to1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/textView_trip1"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintStart_toEndOf="@id/imageView1"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_to1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/search_to"
                        android:inputType="textPersonName|textCapSentences"
                        android:singleLine="true">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout_multicity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout_from1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView_trip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Trip 2:"
                        android:textColor="@color/black_80"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_removeMulticity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:drawableEnd="@drawable/ic_remove"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/app_blue"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="Remove MultiCity"
                        android:textColor="@color/black_80"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_from2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        app:errorEnabled="true"
                        app:layout_constraintEnd_toStartOf="@id/imageView_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_trip2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditText_from2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:hint="@string/search_from"
                            android:inputType="textPersonName|textCapSentences"
                            android:singleLine="true">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_forward"
                        app:layout_constraintBottom_toBottomOf="@id/textInputLayout_from2"
                        app:layout_constraintEnd_toStartOf="@id/textInputLayout_to2"
                        app:layout_constraintStart_toEndOf="@id/textInputLayout_from2"
                        app:layout_constraintTop_toTopOf="@id/textInputLayout_from2"
                        app:tint="@color/app_blue" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_to2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        app:errorEnabled="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imageView_2"
                        app:layout_constraintTop_toBottomOf="@id/textView_trip2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditText_to2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:hint="@string/search_to"
                            android:inputType="textPersonName|textCapSentences"
                            android:singleLine="true">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/checkBox_mixMulticity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Mix MultiCity"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imageView_infoMixMulticity"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textInputLayout_from2" />

                    <ImageView
                        android:id="@+id/imageView_infoMixMulticity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info"
                        app:tint="@color/app_blue"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@id/checkBox_mixMulticity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/checkBox_mixMulticity"
                        app:layout_constraintTop_toTopOf="@id/checkBox_mixMulticity" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_multicity"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout_datesForAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_multicity"
                    android:paddingTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_exactDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Choose dates:"
                            android:textColor="@color/black_80"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="20dp"/>

                        <TextView
                            android:id="@+id/textView_directFlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="One Way Flight"
                            android:textColor="@color/black_80"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"
                            android:drawableEnd="@drawable/ic_forward"
                            android:drawablePadding="2dp"
                            android:drawableTint="@color/app_blue"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textView_returnFlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Return Flight"
                            android:textColor="@color/black_80"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"
                            android:drawableEnd="@drawable/ic_return"
                            android:drawablePadding="2dp"
                            android:drawableTint="@color/app_blue"
                            android:gravity="center"
                            android:visibility="gone"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout_fromDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:layout_constraintTop_toBottomOf="@id/textView_date"
                            android:layout_marginHorizontal="16dp"
                            app:layout_constraintEnd_toStartOf="@id/imageView_date"
                            app:layout_constraintStart_toStartOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditText_fromDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:hint="@string/search_departure"
                                android:inputType="textPersonName|textCapSentences"
                                android:singleLine="true">

                            </com.google.android.material.textfield.TextInputEditText>

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/imageView_date"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_forward"
                            app:tint="@color/app_blue"
                            app:layout_constraintTop_toTopOf="@id/textInputLayout_fromDate"
                            app:layout_constraintBottom_toBottomOf="@id/textInputLayout_fromDate"
                            app:layout_constraintStart_toEndOf="@id/textInputLayout_fromDate"
                            app:layout_constraintEnd_toStartOf="@id/textInputLayout_toDate"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout_toDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:layout_constraintTop_toBottomOf="@id/textView_date"
                            android:layout_marginHorizontal="16dp"
                            app:layout_constraintStart_toEndOf="@id/imageView_date"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditText_toDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:hint="@string/search_arrival"
                                android:inputType="textPersonName|textCapSentences"
                                android:singleLine="true">

                            </com.google.android.material.textfield.TextInputEditText>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_datesInMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Month:"
                            android:textColor="@color/black_80"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="20dp"/>

                        <TextView
                            android:id="@+id/textView_chosenMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="January 2024"
                            android:textColor="@color/black_80"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView_month"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/materialButton_monthChange"
                            style="@style/Theme.FlightSearch.Button.Outline.Oval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Month"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"
                            android:textSize="12sp"
                            app:layout_constraintTop_toTopOf="@id/textView_month"
                            app:layout_constraintBottom_toBottomOf="@id/textView_chosenMonth"/>

                        <RadioGroup
                            android:id="@+id/radioGroup_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/textView_chosenMonth"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginVertical="12dp"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <RadioButton
                                android:id="@+id/radioButtonDaysCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Days Count"/>

                            <RadioButton
                                android:id="@+id/radioButtonLongWeekend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Long Weekend"/>

                            <RadioButton
                                android:id="@+id/radioButtonDoubleWeekend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Double Weekend"/>

                            <RadioButton
                                android:id="@+id/radioButtonOneWayFlight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="One Way Flight"/>

                        </RadioGroup>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout_daysOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView_totalDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Total Days:"
                            android:textColor="@color/black_80"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:id="@+id/imageView_removeTotalDays"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_remove"
                            app:tint="@color/app_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView_totalDays"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/textView_totalDaysNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="1"
                            android:textColor="@color/black_80"
                            app:layout_constraintTop_toBottomOf="@id/textView_totalDays"
                            app:layout_constraintStart_toEndOf="@id/imageView_removeTotalDays"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"/>

                        <ImageView
                            android:id="@+id/imageView_addTotalDays"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/app_blue"
                            app:layout_constraintTop_toBottomOf="@id/textView_totalDays"
                            app:layout_constraintStart_toEndOf="@id/textView_totalDaysNumber"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/textView_daysOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Days Off:"
                            android:textColor="@color/black_80"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"/>

                        <ImageView
                            android:id="@+id/imageView_removeDaysOff"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_remove"
                            app:tint="@color/app_blue"
                            app:layout_constraintEnd_toStartOf="@id/textView_daysOffNumber"
                            app:layout_constraintTop_toBottomOf="@id/textView_daysOff"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/textView_daysOffNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="1"
                            android:textColor="@color/black_80"
                            app:layout_constraintTop_toBottomOf="@id/textView_daysOff"
                            app:layout_constraintEnd_toStartOf="@id/imageView_addDaysOff"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="16dp"/>

                        <ImageView
                            android:id="@+id/imageView_addDaysOff"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/app_blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView_daysOff"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="20dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <CheckBox
                    android:id="@+id/checkBox_flyNightBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fly night before"
                    app:layout_constraintEnd_toStartOf="@id/imageView_infoFlyNightBefore"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_datesForAll"
                    app:layout_constraintBottom_toTopOf="@id/materialButton_search"
                    android:layout_marginBottom="12dp"/>

                <ImageView
                    android:id="@+id/imageView_infoFlyNightBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    app:tint="@color/app_blue"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/checkBox_flyNightBefore"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/checkBox_flyNightBefore"
                    app:layout_constraintTop_toTopOf="@id/checkBox_flyNightBefore" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton_search"
                    style="@style/Theme.FlightSearch.Button.Filled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    app:layout_constraintTop_toBottomOf="@id/checkBox_flyNightBefore"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginHorizontal="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>